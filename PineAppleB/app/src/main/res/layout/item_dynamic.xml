<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dynamic_cover"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@mipmap/ic_launcher" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dynamic_circle_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/dynamic_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/dynamic_circle_img"
                android:layout_toRightOf="@id/dynamic_circle_img"
                android:text="六点半变变" />

            <TextView
                android:id="@+id/dynamic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/dynamic_circle_img"
                android:layout_toRightOf="@id/dynamic_circle_img"
                android:text="正片" />

            <ImageView
                android:id="@+id/dynamic_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/focus_play" />


        </RelativeLayout>

        <TextView
            android:id="@+id/dynamic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="车到床前必有路,老司机也刹不住!"
            android:textColor="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dynamic_tag_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:text="#搞笑" />
            <TextView
                android:id="@+id/dynamic_tag_two"
                android:layout_toRightOf="@id/dynamic_tag_one"
                android:layout_alignTop="@id/dynamic_tag_one"
                android:layout_marginLeft="5dp"
                android:text="#陈翔六点半"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dynamic_tag_three"
                android:layout_width="wrap_content"
                android:layout_alignTop="@id/dynamic_tag_one"
                android:layout_toRightOf="@id/dynamic_tag_two"
                android:text="#六点半变变"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dynamic_play_count"
                android:text="215次"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/dynamic_tag_one"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/dynamic_count_img"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/dynamic_play_count"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/focus_dynamic"/>


        </RelativeLayout>

    </LinearLayout>


</FrameLayout>