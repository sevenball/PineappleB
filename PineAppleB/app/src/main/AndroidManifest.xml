<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wangshiqi.pineappleb">
    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--二维码权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <!--FLASHLIGHT or HARDWARE_TEST-->
    <!--二维码权限-->



    <application
        android:name=".ui.app.PineAppleApp"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.focus.DynamicInfoActivity"

            android:theme="@style/ActivityTheme.Full"
            />
        <!--最火界面详情页-->
        <activity android:name=".ui.activity.hotest.HotestInfoActivity" />
        <!--二维码界面Activity-->
        <activity android:name=".ui.activity.mine.QRPlayActivity"/>
        <activity
            android:name="zxing.activity.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity android:name=".ui.activity.focus.ShowActivity"/>

    </application>

</manifest>